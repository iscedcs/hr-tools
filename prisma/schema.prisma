generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  employee  Employee?
}

model Employee {
  id                 String              @id @default(uuid())
  userId             String              @unique
  role               UserRole            @default(employee)
  departmentId       String?
  position           String?
  phoneNumber        String?
  nfcCardId          String?             @unique
  employeeCodeId     String?             @unique
  isActive           Boolean             @default(true)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  dateOfBirth        DateTime?
  dateOfJoining      DateTime?
  employmentStatus   EmploymentStatus    @default(full_time)
  resumptionDate     DateTime?
  attendanceLogs     AttendanceLog[]
  managedDepartment  Department?         @relation("DepartmentManager")
  employeeBankDetail EmployeeBankDetail?
  employeeDocuments  EmployeeDocument[]
  approvedLeaves     LeaveRequest[]      @relation("LeaveApprover")
  leaveRequests      LeaveRequest[]      @relation("EmployeeLeaveRequests")
  notifications      Notification[]
  department         Department?         @relation("EmployeeDepartment", fields: [departmentId], references: [id])
  employeeCode       EmployeeCode?       @relation(fields: [employeeCodeId], references: [id])
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("employees")
}

model EmployeeCode {
  id         String    @id @default(uuid())
  code       String    @unique
  assigned   Boolean   @default(false)
  assignedAt DateTime?
  assignedTo String?
  createdAt  DateTime  @default(now())
  employeeId String?   @unique
  Employee   Employee?

  @@map("employee_codes")
}

model EmployeeDocument {
  id         String               @id @default(uuid())
  employeeId String
  type       EmployeeDocumentType
  fileUrl    String
  fileName   String
  uploadedAt DateTime             @default(now())
  employee   Employee             @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, type])
}

model EmployeeBankDetail {
  id              String            @id @default(uuid())
  employeeId      String            @unique
  bankName        String
  accountNumber   String
  accountName     String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  status          BankDetailsStatus @default(LOCKED)
  approvedAt      DateTime?
  approvedById    String?
  rejectedAt      DateTime?
  rejectionReason String?
  requestedAt     DateTime?
  employee        Employee          @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model Department {
  id          String     @id @default(uuid())
  name        String
  description String?
  managerId   String?    @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  manager     Employee?  @relation("DepartmentManager", fields: [managerId], references: [id])
  employees   Employee[] @relation("EmployeeDepartment")
}

model AttendanceLog {
  id                String             @id @default(uuid())
  employeeId        String
  checkInTime       DateTime
  checkOutTime      DateTime?
  status            AttendanceStatus   @default(checked_in)
  checkInLocation   String?
  checkOutLocation  String?
  checkInMethod     String             @default("manual")
  checkOutMethod    String?
  punctualityStatus PunctualityStatus?
  notes             String?
  totalHours        Decimal?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  employee          Employee           @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([checkInTime])
  @@index([status])
}

model LeaveRequest {
  id              String      @id @default(uuid())
  employeeId      String
  leaveType       String
  startDate       DateTime
  endDate         DateTime
  totalDays       Int
  reason          String?
  status          LeaveStatus @default(pending)
  approvedBy      String?
  approvedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  approver        Employee?   @relation("LeaveApprover", fields: [approvedBy], references: [id])
  employee        Employee    @relation("EmployeeLeaveRequests", fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([status])
}

model Notification {
  id         String   @id @default(uuid())
  employeeId String
  title      String
  message    String
  type       String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([isRead])
}

model SystemSetting {
  id           String   @id @default(uuid())
  settingKey   String   @unique
  settingValue String
  description  String?
  updatedAt    DateTime @updatedAt
}

enum UserRole {
  superadmin
  hr_admin
  employee
}

enum AttendanceStatus {
  checked_in
  checked_out
}

enum PunctualityStatus {
  ON_TIME
  LATE
}

enum LeaveStatus {
  pending
  approved
  rejected
}

enum EmploymentStatus {
  intern
  contract
  full_time
}

enum EmployeeDocumentType {
  cv
  nda
  hand_book
  acceptance_letter
  profile_picture
}

enum BankDetailsStatus {
  LOCKED
  PENDING_APPROVAL
  EDITABLE
}
